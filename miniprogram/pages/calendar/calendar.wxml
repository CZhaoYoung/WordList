<!-- miniprogram/pages/calendar/calendar.wxml -->
<view style="height:100%;">
<picker-view indicator-class="indicator" mask-class="mask" class="picker-view">
  <picker-view-column>
    <view class='calendar' wx:for="{{date}}">
      <view class="calendar-titles">
         <text class="calendar-title-text">2019.03</text>
      </view>
      <view class='date-box'>
        <block wx:for='{{dateArr}}' wx:key=''>
          <view class='{{isToday == item.isToday ? "nowDay" : ""}}'>
            <view class='date-head' data-year='{{year}}' data-month='{{month}}' data-datenum='{{item.dateNum}}'>
              <view>{{item.dateNum}}</view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </picker-view-column>
</picker-view>
</view>
<view class="top-block">
  <view class="days-block">
    <text class="days-text">0</text>
    <text class="days-assist-text">å¤©</text>
  </view>
  <view class='header'>
    <view wx:for='{{date}}' wx:key=''>{{item}}
    </view>
  </view>
</view>