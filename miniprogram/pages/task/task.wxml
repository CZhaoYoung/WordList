<!--miniprogram/pages/task/task.wxml-->
<view class="container">
    <view class="plan-block">
        <text class="plan-guide-text-left">我的学习任务</text>
        <text class="plan-guide-text-right">正在学</text>
        <view class="plan-now-block">
            <view class="plan-now-book-image-container">
                <image class="plan-now-book-image" src="../../images/books/book1.png"/>
            </view>
            <view class="plan-now-book-info">
                <view class="plan-now-book-name-text">六级考纲词汇</view>
                <view class="plan-now-text-container">
                    <text class="plan-now-text">每天</text>
                    <text class="plan-now-text">200</text>
                    <text class="plan-now-text">新词</text>
                </view>
                <view class="plan-now-change-icon-container">
                    <image class="plan-now-change-icon" src="../../images/icons/email.png" bindtap='toPlanPage'/>
                </view>
                <view class="plan-now-progress-text-container">
                    <view class="plan-now-progress-text">
                        <text >已完成：</text>
                        <text >0</text>
                        <text >/</text>
                        <text >2420</text>
                        <text >词</text>
                    </view>
                </view>
                <view class="plan-now-progress-bar-container">
                    <view class="plan-now-progress-bar"/>
                    <view class="plan-now-progress-bar-mask"/>
                </view>
            </view>
        </view>
    </view>
    <view class="books-block">
        <view class="books-guide">
            <text class="books-guide-text">我的单词书</text>
            <view class="books-add-button">添加新书</view>
        </view>
        <view class="books-container">
            <view class="books-image-container">
                <image class="books-image" src="../../images/books/book2.png" />
            </view>
            <view class="books-info-container">
                <view class="books-name-text">六级真题核心词汇</view>
                <view class="books-progress-text">
                    <text >已完成：</text>
                    <text >0</text>
                    <text >/</text>
                    <text >2420</text>
                    <text >词</text>
                </view>
                <view class="books-info-bottom">
                    <view class="books-delete-icon-container">
                        <image class="books-delete-icon" src="../../images/icons/star.png" />
                    </view>
                    <view class="books-select-button">切换</view>
                </view>
            </view>
        </view>
    </view>
</view>